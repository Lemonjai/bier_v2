<p id="notice"><%= notice %></p>

<h1>Beercolours</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Colour</th>
      <th>Hexcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beercolours.each do |beercolour| %>
      <tr>
        <td><%= beercolour.name %></td>
        <td><%= image_tag beercolour.colour_image.thumb.url.to_s %></td>
        <td><%= beercolour.hexcode %></td>
        <td><%= link_to 'Show', beercolour %></td>
        <td><%= link_to 'Edit', edit_beercolour_path(beercolour) %></td>
        <td><%= link_to 'Destroy', beercolour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

